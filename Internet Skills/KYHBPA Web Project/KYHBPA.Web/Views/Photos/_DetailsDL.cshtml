@using Microsoft.Ajax.Utilities
@model KYHBPA.Models.PhotoDetailedViewModel

<dl class="dl-horizontal">
    <dt>
        @Html.DisplayName("Image")
    </dt>
    <dd class="smallImageWrapper">
        <img src="@Url.Action("RenderImage", new {id = Model.Id})" class="smallImage" />
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.PhotoName)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.PhotoName)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Description)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Description)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.IsInGallery)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.IsInGallery)
    </dd>

    @if (!Model.PhotoCollectionKey.IsNullOrWhiteSpace())
    {
        <dt>
            @Html.DisplayNameFor(model => model.PhotoCollectionKey)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PhotoCollectionKey)
        </dd>
    }

    <dt>
        @Html.DisplayNameFor(model => model.UploadedBy)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.UploadedBy.FullName)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Uploaded)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Uploaded)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.LastModifiedBy)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.LastModifiedBy.FullName)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.LastModified)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.LastModified)
    </dd>

    @if (Model.IsDeleted)
    {

        <dt>
            @Html.DisplayNameFor(model => model.DeletedBy)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DeletedBy.FullName)
        </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Deleted)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Deleted)
            </dd>
    }

    @*<dt>
            @Html.DisplayNameFor(model => model.Event.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Event.Name)
        </dd>*@
</dl>